<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioButton
        android:id="@+id/use_device_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_device_location" />

    <RadioButton
        android:id="@+id/specify_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/specify_location" />

    <LinearLayout
        android:id="@+id/specify_location_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City" />

        <EditText
            android:id="@+id/city_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State" />

        <EditText
            android:id="@+id/state_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/lookup_address_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lookup_address" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude: " />

        <TextView
            android:id="@+id/lon_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude Goes Here" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude: " />

        <TextView
            android:id="@+id/lat_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude Goes Here" />

    </LinearLayout>


</LinearLayout>