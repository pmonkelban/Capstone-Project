<resources>

    <!-- Base application theme. -->
    <style name="LunchWheelTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:textColor">@android:color/black</item>
        <item name="android:colorBackground">@color/blue_100</item>
        <item name="android:fontFamily">sans-serif-condensed</item>

        <item name="colorPrimary">@color/blue_400</item>
        <item name="colorPrimaryDark">@color/blue_900</item>
        <item name="colorAccent">@color/blue_500</item>

        <item name="android:textColorLink">@color/blue_900</item>

        <item name="android:actionMenuTextAppearance">@style/LunchWheelTheme.MenuTextStyle</item>

    </style>

    <style name="LunchWheelTheme.Menu" parent="LunchWheelTheme">
        <item name="android:colorBackground">@color/blue_600</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LunchWheelTheme.Link" parent="LunchWheelTheme">
        <item name="android:textColor">@color/blue_700</item>
    </style>

    <style name="LunchWheelTheme.MenuTextStyle"
        parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:colorBackground">@color/blue_900</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>
